journal = {Phys. Chem. Chem. Phys.},
language = {en},
month = {nov},
number = {46},
pages = {31278--31286},
publisher = {The Royal Society of Chemistry},
title = {{Rotational dynamics of organic cations in \ce{CH3NH3PbI3} perovskite}},
url = {http://pubs.rsc.org/en/content/articlehtml/2015/cp/c5cp05348j},
volume = {17},
year = {2015}
}

