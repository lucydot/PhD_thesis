@Article{Brebels2017,
author ="Brebels, Jeroen and Manca, Jean V. and Lutsen, Laurence and Vanderzande, Dirk and Maes, Wouter",
title  ="High dielectric constant conjugated materials for organic photovoltaics",
journal  ="J. Mater. Chem. A",
